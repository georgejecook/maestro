<?xml version="1.0" encoding="UTF-8"?>
<component name="FocusManager" extends="Group" >

  <interface>
    <!-- base of all views -->
    
    <!-- readonly -->
    <field id="focusedNode"  type="node" value="invalid"/>
    <field id="isLocked"  type="boolean" value="false"/>
    <field id="lockReason"  type="string" value=""/>
    <field id="isLogging"  type="boolean" value="true" />
    
    <!-- debug fields -->
    <field id="_m"  type="assocarray"/>
    <field id="_debugM"  type="boolean" alwaysNotify="true"/>
        
    <function name="setFocusOn" />
    <function name="unsetFocusOn" />
    <function name="setFocusLocked" />
  </interface>

</component>
