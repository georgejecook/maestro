           />
      <RowList
          id="rowList5"
          content="@{vm.rowListContent}"
          itemComponentName="CustomItem"
          itemSize="[1920,200]"
          numRows="1"
          rowItemSize="[[435,200]]"
          rowHeights="[200]"
          showRowLabel="[false]"
          rowLabelColor="#FFFFFF"
          showRowCounter="[false]"
          rowFocusAnimationStyle="fixedFocusWrap"
          drawFocusFeedback="true"
           />
      <RowList
          id="rowList6"
          content="@{vm.rowListContent}"
          itemComponentName="CustomItem"
          itemSize="[1920,200]"
          numRows="1"
          rowItemSize="[[435,200]]"
          rowHeights="[200]"
          showRowLabel="[false]"
          rowLabelColor="#FFFFFF"
          showRowCounter="[false]"
          rowFocusAnimationStyle="fixedFocusWrap"
          drawFocusFeedback="true"
           />
      <Rectangle
          id="rect6"
          color="#0000ff"
          height="400"
          width="200" />
    </MultiContainer>
  </children>

</component>